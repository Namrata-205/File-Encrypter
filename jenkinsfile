node {

    try {

        stage('Clean Workspace') {
            sh '''
            echo "Cleaning old build artifacts..."
            rm -rf Password\\ Protection/build
            rm -rf Password\\ Protection/test-build
            rm -f Password\\ Protection/junit-platform-console-standalone.jar
            '''
        }

        stage('Build') {
            sh '''
            echo "===== BUILD STAGE ====="
            cd "Password Protection"
            mkdir -p build
            javac -d build src/*.java
            echo "Build completed successfully."
            '''
        }

        stage('Test') {
            sh '''
            echo "===== TEST STAGE ====="
            cd "Password Protection"

            echo "Downloading correct JUnit jar..."
            curl -L -o junit-platform-console-standalone.jar \
            https://repo1.maven.org/maven2/org/junit/platform/junit-platform-console-standalone/1.10.0/junit-platform-console-standalone-1.10.0.jar

            echo "Verifying download..."
            ls -lh junit-platform-console-standalone.jar

            mkdir -p test-build
            echo "Compiling test files..."
            javac -cp junit-platform-console-standalone.jar:build -d test-build src/*.java

            echo "Running tests..."
            java -jar junit-platform-console-standalone.jar \
            -cp build:test-build \
            --scan-class-path
            '''
        }

        stage('Deploy') {
            echo "===== DEPLOY STAGE ====="
            echo "Deployment placeholder"
        }

        echo "Pipeline completed successfully!"

    } catch (Exception e) {
        echo "Pipeline failed!"
        throw e
    }
}
