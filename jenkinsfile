node {

    try {

        stage('Checkout') {
            echo "Checking out source code..."
        }

        stage('Build') {
            sh '''
            echo "===== BUILD STAGE ====="
            cd "Password Protection"

            mkdir -p build
            javac -d build src/*.java

            echo "Build completed successfully."
            '''
        }

        stage('Test') {
            sh '''
            echo "===== TEST STAGE ====="
            cd "Password Protection"

            # Remove old/corrupted jar if exists
            rm -f junit-platform-console-standalone.jar

            echo "Downloading JUnit Platform Console..."
            curl -L -o junit-platform-console-standalone.jar \
            https://repo1.maven.org/maven2/org/junit/platform/junit-platform-console-standalone/1.10.0/junit-platform-console-standalone-1.10.0.jar

            echo "Verifying download..."
            ls -lh junit-platform-console-standalone.jar

            if [ ! -s junit-platform-console-standalone.jar ]; then
                echo "JUnit jar download failed!"
                exit 1
            fi

            mkdir -p test-build

            echo "Compiling test files..."
            javac -cp junit-platform-console-standalone.jar:build -d test-build src/*.java

            echo "Running tests..."
            java -jar junit-platform-console-standalone.jar \
            -cp build:test-build \
            --scan-class-path
            '''
        }

        stage('Deploy') {
            echo "===== DEPLOY STAGE ====="
            echo "Deployment step placeholder"
        }

        echo "Pipeline completed successfully!"

    } catch (Exception e) {
        echo "Pipeline failed!"
        throw e
    }
}
